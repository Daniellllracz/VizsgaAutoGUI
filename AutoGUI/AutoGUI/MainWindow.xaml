<Window x:Class="AutoGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200">
    <Grid>
        <Label Content="Autó gyártók" HorizontalAlignment="Left" Height="26" Margin="57,44,0,0" VerticalAlignment="Top" Width="201"/>
        <ListBox x:Name="ModellListBox" HorizontalAlignment="Left" Height="355" Margin="57,97,0,0" VerticalAlignment="Top" Width="299" SelectionChanged="ModellListBox_SelectionChanged" />
        <ComboBox x:Name="karosszeriaCbx" HorizontalAlignment="Left" Height="30" Margin="57,484,0,0" VerticalAlignment="Top" Width="201" SelectionChanged="karosszeriaCbx_SelectionChanged"/>
        <Label Content="Karosszéria típusa" HorizontalAlignment="Left" Height="27" Margin="57,452,0,0" VerticalAlignment="Top" Width="201"/>
        <Label Content="Váltó típusa" HorizontalAlignment="Left" Height="28" Margin="57,514,0,0" VerticalAlignment="Top" Width="201"/>
        <ComboBox x:Name="GearBoxCBX" HorizontalAlignment="Left" Height="35" Margin="57,542,0,0" VerticalAlignment="Top" Width="369" SelectionChanged="GearBoxCBX_SelectionChanged"/>
        <GroupBox HorizontalAlignment="Left" Height="230" Header="Ajtók száma&#xD;&#xA;" Margin="470,161,0,0" VerticalAlignment="Top" Width="162">
            <StackPanel x:Name="StackPanel" HorizontalAlignment="Left" Height="198" Margin="10,0,0,0" VerticalAlignment="Top" Width="142">
                <RadioButton Content="2" Height="27" Width="136"/>
                <RadioButton Content="3" Height="27" Width="136"/>
                <RadioButton Content="4" Height="27" Width="136"/>
                <RadioButton Content="5" Height="27" Width="136"/>

            </StackPanel>
        </GroupBox>
        <Label Content="Évek száma" HorizontalAlignment="Left" Height="37" Margin="470,396,0,0" VerticalAlignment="Top" Width="162"/>
        <TextBox x:Name="Kezdet" HorizontalAlignment="Left" Height="33" Margin="470,466,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="44"/>
        <TextBox x:Name="Vege" HorizontalAlignment="Left" Height="32" Margin="556,466,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="44"/>
        <Button x:Name="SearchhButon" Content="Keresés" HorizontalAlignment="Left" Height="49" Margin="470,528,0,0" VerticalAlignment="Top" Width="162"/>
        <Label Content="A keresésnek megfelelő autók" HorizontalAlignment="Left" Height="27" Margin="885,44,0,0" VerticalAlignment="Top" Width="257"/>
        <ListBox HorizontalAlignment="Left" Height="480" Margin="810,97,0,0" VerticalAlignment="Top" Width="305" />

    </Grid>
</Window>
